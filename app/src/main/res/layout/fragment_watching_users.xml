<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayoutWatchingUsers"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.fragments.SubscribedUsersTabsFragments.WatchingUsers">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".user.fragments.SubscribedUsersTabsFragments.WatchingUsers">

        <!-- recycler view to display our data -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/watchingUsersRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <TextView
        android:id="@+id/WatchingUsersEmptyView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:text="@string/no_data_found" />

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/WatchingUsersNavigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/header_nav"
        app:menu="@menu/menu_nav">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>

